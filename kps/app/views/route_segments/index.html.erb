<h1>Listing route_segments</h1>

<table>
  <thead>
    <tr>
      <th>From</th>
      <th>To</th>
      <th>Status</th>
      <th>Cost</th>
      <th>Duration</th>
      <th>Costvolume</th>
      <th>Costweight</th>
      <th>Company</th>
	  <th>Day</th>
	  <th>Frequency</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @route_segments.each do |route_segment| %>
      <tr>
        <td><%= route_segment.from_location.name %></td>
        <td><%= route_segment.to_location.name %></td>
        <td><%= route_segment.active ?  'Active' : 'Inactive' %></td>
        <td><%= Helper.decimal_as_currency(route_segment.cost) %></td>
        <td><%= route_segment.duration %> hours</td>
        <td><%= Helper.decimal_as_currency(route_segment.costVolume) %> per cmÂ³</td>
        <td><%= Helper.decimal_as_currency(number_with_precision(route_segment.costWeight, :precision => 2)) %> per gram</td>
        <td><%= route_segment.company.name %></td>
		<td><%= route_segment.day %></td>
		<td><%= route_segment.frequency %></td>
        <td><%= link_to 'Show', route_segment %></td>
        <td><%= link_to 'Edit', edit_route_segment_path(route_segment) %></td>
        <td><%= link_to 'Destroy', route_segment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

