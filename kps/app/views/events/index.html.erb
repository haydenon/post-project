<h1>Events</h1>

<p>
  <strong>Events Processed:</strong>
  <%= @events_num %>
</p>
  
<table>
  <thead>
    <tr>
	  <th>Date Created</th>
      <th>Type</th>
	  <th></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
		<td><%= Helper.time_format(event.created_at) %></td>
        <td><%= event.type %></td>
        <td><%= link_to 'Details', event %></td>
      </tr>
    <% end %>
  </tbody>
</table>

