<h2>Segments</h2>
<ol>
  <% @mail_request.mail_request_route_segments.each do |mrrs| %>
  <li>
    <% if !mrrs.reversed%>
    <%= link_to mrrs.segment.from_location.name + ' > ' + mrrs.segment.to_location.name, mrrs.segment%>
    <% end %>
    <% if mrrs.reversed%>
    <%= link_to mrrs.segment.to_location.name + ' > ' + mrrs.segment.from_location.name, mrrs.segment%>
    <% end %>
  </li>
  <% end %>
</ol>

